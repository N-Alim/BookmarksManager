{

    "author": "Alim NOUIRA",
    "homepage_url": "https://github.com/N-Alim/BookmarksManager.git",
    "name": "Bookmarks Manager",
    "version": "1.0.0",
    "description": "Manage your bookmarks with tags",
    "permissions": 
    [
        "activeTab",
        "tabs",
        "storage",
        "unlimitedStorage"
    ],
    "action": 
    {
        "default_popup": "index.html",
        "default_icon": 
        {
            "16": "assets/img/fav-16.png",
            "32": "assets/img/fav-32.png",
            "48": "assets/img/fav-48.png"
        }
    },
    "background": 
    {
        "service_worker": "assets/js/background.js"
    },
    "manifest_version": 3
}